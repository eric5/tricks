.container
  .row
    .col-md-9
      .left-panel
        .left-panel-header
          Tricks
        - @tricks.each do |trick|
          .left-panel-trick
            .trick-user-avatar
              %img(src="http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest("#{trick.user.email}")}?s=50")
            .trick-content
              .trick-title
                = trick.title
              .trick-info
                = trick.user.name
                ·
                = trick.created_at.strftime("%Y-%m-%d %H:%m")
                · 0 comments
        .left-panel-footer.clearfix
          .paginate
            = paginate @tricks
    .col-md-3
      .right-panel
        %a{:href => new_trick_path}
          %button{ class: 'btn btn-success btn-block' }
            Create a trick
