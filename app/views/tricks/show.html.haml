.container
  .row
    .col-md-9
      .left-panel
        .header
          .title
            = @trick.title
          .trick-user-avatar
            %img(src="http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest("#{@trick.user.email}")}?s=30")
          .trick-info
            = @trick.user.name
            ·
            = @trick.created_at.strftime("%Y-%m-%d %H:%m")
            · 0 comments
        .content
          = markdown @trick.content
    .col-md-3
      = render 'home/right_panel'
